<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <EditText
        android:id="@+id/register_name"
        android:layout_width="225dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp"
        android:background="@drawable/input_background"
        android:textColor="@android:color/white"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/register_view"
        android:layout_width="221dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="Register"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="232dp"
        android:layout_height="54dp"
        android:layout_alignStart="@+id/register_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="223dp"
        android:background="@drawable/input_background"
        android:textColor="@android:color/white"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_alignLeft="@+id/register_name" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="228dp"
        android:layout_height="52dp"
        android:layout_alignStart="@+id/register_name"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/input_background"
        android:textColor="@android:color/white"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginLeft="0dp"
        android:layout_alignLeft="@+id/register_name" />

    <Button
        android:id="@+id/register_newaccount"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="127dp"
        android:textColor="@android:color/holo_purple"
        android:text="Create New Account" />

    <Button
        android:id="@+id/register_backtologin"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:text="Back to Login"
        android:textColor="@android:color/holo_purple" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/register_imageview"
        android:layout_width="90dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="-35dp"
        android:layout_toStartOf="@+id/register_name"
        android:src="@drawable/common_google_signin_btn_icon_dark"
        tools:src="@tools:sample/avatars"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginRight="-35dp"
        android:layout_toLeftOf="@+id/register_name" />

    <ProgressBar
        android:id="@+id/register_ProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/register_name"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-5dp"
        android:layout_marginBottom="541dp"
        android:indeterminate="true"
        android:visibility="invisible"
        android:layout_alignLeft="@+id/register_name"
        android:layout_marginLeft="-5dp" />


</RelativeLayout>